	boolean arrayHasExactMatch(String[] arr, String match, boolean caseSen) {
		
		
		if (caseSen) {
			for(int x=0;x<arr.length;x++) {
				if (arr[x] == match) {
					return true;
				}
			}
		}else {
			for(int x=0;x<arr.length;x++) {
				if (arr[x].toUpperCase() == match.toUpperCase()) {
					return true;
				}
			}
		}
		
		
		return false;
		
	}
	
